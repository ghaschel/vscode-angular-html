{
  repository: {
    doctype: {
      patterns: [
        {
          endCaptures: {
            '1': {
              name: 'punctuation.definition.tag.end.html',
            },
          },
          beginCaptures: {
            '1': {
              name: 'punctuation.definition.tag.begin.html',
            },
            '2': {
              name: 'keyword.operator.exclamation',
            },
            '3': {
              name: 'entity.name.tag.html.doctype',
            },
          },
          begin: '(<)(!)((?i:doctype))',
          end: '(>)',
          // using another scope different from the one it fits to differentiate in color from objects and variables
          name: 'meta.tag.metadata.doctype.html',
          patterns: [
            {
              include: '#string-double-quoted-capture',
            },
            {
              match: '[^\\s>]+',
              name: 'entity.other.attribute-name.html',
            },
          ],
        },
      ],
    },
  },
}
